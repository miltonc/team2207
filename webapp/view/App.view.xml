<mvc:View
    controllerName="com.sap.kpimodel.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <List id="kpiList" headerText="KPIs" items="{path: '/KPIs'}">
                            <items>
                                <StandardListItem title="{name}" />
                            </items>
                        </List>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
